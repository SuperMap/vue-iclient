{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": [
      "ES2018",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*",
        ".pnpm/*"
      ]
    },
    "types": [
      "mapbox-gl",
      "vite/client",
      "vue"
    ]
  },
  "include": [
    "packages/mapboxgl",
    "typings/env.d.ts",
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/*.md"
  ]
}