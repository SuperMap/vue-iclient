{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": [
      "ES2018",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true
  },
  "include": [
    "packages",
    "../core",
    "typings/**/*.d.ts",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "../core/libs/**",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/*.md"
  ]
}